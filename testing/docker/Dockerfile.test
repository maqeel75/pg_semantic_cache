FROM postgres:17

# Install build dependencies and pgvector from package
RUN apt-get update && apt-get install -y \
    build-essential \
    postgresql-server-dev-17 \
    postgresql-17-pgvector \
    && rm -rf /var/lib/apt/lists/*

# Copy extension source
WORKDIR /build
COPY . .

# Build and install pg_semantic_cache
RUN make clean && make && make install

# Initialize database and run tests
COPY testing/docker/docker-entrypoint-test.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint-test.sh

CMD ["/usr/local/bin/docker-entrypoint-test.sh"]
